<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="de.romycomer.bookregal.MainActivity"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/toolbar"
                        layout="@layout/toolbar" />

                    <TextView
                        android:id="@+id/main_tv_welcome"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="@string/main_tv_welcome"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:paddingTop="75dp"
                        android:textStyle="bold"
                        android:background="@drawable/round_corner_bottom"
                        android:textColor="@color/white"
                        android:layout_marginBottom="100dp"
                        app:layout_constraintTop_toBottomOf="@id/toolbar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/main_tv_mathematics"/>
                    <TextView
                        android:id="@+id/main_tv_computer_science"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/round_corner_book"
                        android:layout_marginTop="130dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/main_tv_computer_science"
                        android:gravity="center_horizontal"
                        android:paddingTop="100dp"
                        android:textSize="16dp"
                        android:onClick="ClickComputerSience"
                        android:textStyle="italic"
                        android:textColor="#827A7A"
                        app:layout_constraintTop_toBottomOf="@id/toolbar"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/main_tv_mathematics"/>
                    <TextView
                        android:id="@+id/main_tv_mathematics"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/round_corner_book"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/main_tv_mathematics"
                        android:gravity="center_horizontal"
                        android:onClick="clickMathematic"
                        android:paddingTop="100dp"
                        android:textSize="16dp"
                        android:textStyle="italic"
                        android:textColor="#827A7A"
                        app:layout_constraintTop_toBottomOf="@id/main_tv_computer_science"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/main_tv_business_informatics"/>
                    <TextView
                        android:id="@+id/main_tv_business_informatics"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/round_corner_book"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/main_tv_business_informatics"
                        android:onClick="clickBusiness_informatic"
                        android:gravity="center_horizontal"
                        android:paddingTop="100dp"
                        android:textSize="16dp"
                        android:textStyle="italic"
                        android:textColor="#827A7A"
                        app:layout_constraintTop_toBottomOf="@id/main_tv_mathematics"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/main_tv_business_administration"/>
                    <TextView
                        android:id="@+id/main_tv_business_administration"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/round_corner_book"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/main_tv_business_administration"
                        android:gravity="center_horizontal"
                        android:onClick="clickBusiness_administration"
                        android:paddingTop="100dp"
                        android:textSize="16dp"
                        android:textStyle="italic"
                        android:textColor="#827A7A"
                        app:layout_constraintTop_toBottomOf="@id/main_tv_business_informatics"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/main_tv_physic"
                        />
                    <TextView
                        android:id="@+id/main_tv_physic"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/round_corner_book"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/main_tv_physic"
                        android:gravity="center_horizontal"
                        android:paddingTop="100dp"
                        android:textSize="16dp"
                        android:onClick="clickPhysic"
                        android:textStyle="italic"
                        android:textColor="#827A7A"
                        app:layout_constraintTop_toBottomOf="@id/main_tv_business_administration"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                    <TextView
                        android:id="@+id/main_tv_titel_computer_science"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_tv_titel_computer_science"
                        android:textSize="25dp"
                        android:elevation="10dp"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:background="@drawable/round_corner_titel"
                        app:layout_constraintLeft_toLeftOf="@id/main_tv_computer_science"
                        app:layout_constraintTop_toTopOf="@id/main_tv_computer_science"/>
                    <TextView
                        android:id="@+id/main_tv_titel_mathematics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_tv_titel_mathematics"
                        android:textSize="25dp"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:elevation="10dp"
                        android:background="@drawable/round_corner_titel"
                        app:layout_constraintLeft_toLeftOf="@id/main_tv_mathematics"
                        app:layout_constraintTop_toTopOf="@id/main_tv_mathematics"/>
                    <TextView
                        android:id="@+id/main_tv_titel_business_informatics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_tv_titel_business_informatics"
                        android:textSize="25dp"
                        android:elevation="10dp"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:background="@drawable/round_corner_titel"
                        app:layout_constraintLeft_toLeftOf="@id/main_tv_business_informatics"
                        app:layout_constraintTop_toTopOf="@id/main_tv_business_informatics"/>
                    <TextView
                        android:id="@+id/main_tv_titel_business_administration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_tv_titel_business_administration"
                        android:textSize="25dp"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:elevation="10dp"
                        android:background="@drawable/round_corner_titel"
                        app:layout_constraintLeft_toLeftOf="@id/main_tv_business_administration"
                        app:layout_constraintTop_toTopOf="@id/main_tv_business_administration"/>
                    <TextView
                        android:id="@+id/main_tv_titel_physic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_tv_titel_physic"
                        android:textSize="25dp"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:elevation="10dp"
                        android:background="@drawable/round_corner_titel"
                        app:layout_constraintLeft_toLeftOf="@id/main_tv_physic"
                        app:layout_constraintTop_toTopOf="@id/main_tv_physic"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/white">
            <include
                layout="@layout/main_nav_drawer"/>
        </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>