<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/main_tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Welcome in The Book library"
        android:textAlignment="center"
        android:textSize="25dp"
        android:paddingTop="75dp"
        android:textStyle="bold"
        android:background="@drawable/round_corner_bottom"
        android:textColor="@color/white"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_tv_mathematics"/>
    <TextView
        android:id="@+id/main_tv_computer_science"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/round_corner_book"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Operating system - User experience - Programming"
        android:gravity="center_horizontal"
        android:paddingTop="100dp"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="#827A7A"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_tv_mathematics"/>
    <TextView
        android:id="@+id/main_tv_mathematics"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/round_corner_book"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Algebra - Analize - Statistical"
        android:gravity="center_horizontal"
        android:paddingTop="100dp"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="#827A7A"
        app:layout_constraintTop_toBottomOf="@id/main_tv_computer_science"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_tv_business_informatics"/>
    <TextView
        android:id="@+id/main_tv_business_informatics"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/round_corner_book"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Managment - Networks - Programming"
        android:gravity="center_horizontal"
        android:paddingTop="100dp"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="#827A7A"
        app:layout_constraintTop_toBottomOf="@id/main_tv_mathematics"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_tv_business_administration"/>
    <TextView
        android:id="@+id/main_tv_business_administration"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/round_corner_book"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Law - Economy - Statistical - Managment"
        android:gravity="center_horizontal"
        android:paddingTop="100dp"
        android:textSize="16dp"
        android:textStyle="italic"
        android:textColor="#827A7A"
        app:layout_constraintTop_toBottomOf="@id/main_tv_business_informatics"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/main_tv_titel_computer_science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Science"
        android:textSize="25dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@drawable/round_corner_titel"
        app:layout_constraintLeft_toLeftOf="@id/main_tv_computer_science"
        app:layout_constraintTop_toTopOf="@id/main_tv_computer_science"/>
    <TextView
        android:id="@+id/main_tv_titel_mathematics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mathematics"
        android:textSize="25dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@drawable/round_corner_titel"
        app:layout_constraintLeft_toLeftOf="@id/main_tv_mathematics"
        app:layout_constraintTop_toTopOf="@id/main_tv_mathematics"/>
    <TextView
        android:id="@+id/main_tv_titel_business_informatics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Informatics"
        android:textSize="25dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@drawable/round_corner_titel"
        app:layout_constraintLeft_toLeftOf="@id/main_tv_business_informatics"
        app:layout_constraintTop_toTopOf="@id/main_tv_business_informatics"/>
    <TextView
        android:id="@+id/main_tv_titel_business_administration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Administration"
        android:textSize="25dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@drawable/round_corner_titel"
        app:layout_constraintLeft_toLeftOf="@id/main_tv_business_administration"
        app:layout_constraintTop_toTopOf="@id/main_tv_business_administration"/>
</androidx.constraintlayout.widget.ConstraintLayout>
